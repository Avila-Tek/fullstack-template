{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "project": {
        "type": "string"
      },
      "backendArchitecture": {
        "type": "string",
        "enum": ["RESTful", "GraphQL"]
      },
      "ORM": {
        "type": "string",
        "enum": ["Mongoose", "Prisma"]
      },
      "serverLocation": {
        "type": "string"
      },
      "apps": {
        "type": "object",
        "properties": {
          "client": { "type": "string" },
          "admin": { "type": "string" },
          "api": { "type": "string" }
        },
        "required": ["client", "admin", "api"],
        "additionalProperties": false
      },
      "ui": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "required": ["project", "backendArchitecture", "ORM", "serverLocation", "apps", "ui"],
    "additionalProperties": false
}
  