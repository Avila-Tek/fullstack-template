{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES2021",
    "skipLibCheck": true,
    "sourceMap": false,
    "allowJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "node",
    ],
    "esModuleInterop": true,
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules"]
}